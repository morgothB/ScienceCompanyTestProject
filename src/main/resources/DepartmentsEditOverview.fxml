<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.depatmentControlWindow.DepartmentsEditController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <BorderPane maxWidth="180.0" minWidth="180.0" prefWidth="180.0" BorderPane.alignment="CENTER">
               <top>
                  <Label text="Departments" textAlignment="CENTER" underline="true" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font></Label>
               </top>
               <bottom>
                  <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                      <Button mnemonicParsing="false" onAction="#addDepartment" text="Add" />
                        <Button mnemonicParsing="false" onAction="#deleteDepartment" text="Delete" />
                    </buttons>
                     <padding>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </padding>
                  </ButtonBar>
               </bottom>
               <center>
                  <ListView fx:id="departmentList" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </left>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <top>
                  <BorderPane BorderPane.alignment="CENTER">
                     <left>
                        <Label text="Department:" BorderPane.alignment="CENTER">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </Label>
                     </left>
                     <center>
                        <TextField fx:id="departmentName" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets left="10.0" right="10.0" />
                           </BorderPane.margin>
                           <font>
                              <Font size="14.0" />
                           </font></TextField>
                     </center>
                     <right>
                        <Button mnemonicParsing="false" onAction="#renameDepartment" text="Rename" BorderPane.alignment="CENTER" />
                     </right>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="30.0" />
                     </padding>
                  </BorderPane>
               </top>
               <center>
                  <TableView fx:id="tableEmployee" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="columnID" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" text="ID" />
                      <TableColumn fx:id="columnName" prefWidth="75.0" text="First Name" />
                        <TableColumn fx:id="columnSurname" prefWidth="75.0" text="Second Name" />
                        <TableColumn fx:id="columnPosition" prefWidth="75.0" text="Position" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <BorderPane.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </BorderPane.margin>
                  </TableView>
               </center>
               <bottom>
                  <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                      <Button mnemonicParsing="false" text="Edit Worker" />
                    </buttons>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                     </BorderPane.margin>
                  </ButtonBar>
               </bottom>
               <BorderPane.margin>
                  <Insets left="5.0" right="5.0" />
               </BorderPane.margin>
            </BorderPane>
         </center></BorderPane>
   </children>
</AnchorPane>
